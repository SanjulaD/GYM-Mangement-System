<Window x:Class="Gym_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None" Background="White" WindowStartupLocation="CenterScreen"
        Title="Splash Screen" Height="242" Width="450">

    <StackPanel VerticalAlignment="Center">
        <Image Source="/image/a_m_logo.png" Height="90" Width="186" Margin="132,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock FontSize="15" Foreground="Black" TextAlignment="Center" Text="GYM MANAGEMENT SYSTEM"/>
        <Canvas>
            <Rectangle x:Name="progressBar" 
           
           Fill="#FFFFD104" HorizontalAlignment="Left"
		   Height="4" Margin="0,0,0,0"
		   VerticalAlignment="Top" Width="5"
		   RadiusY="0,1" RadiusX="0,1" Canvas.Top="30"/>
        </Canvas>
    </StackPanel>
</Window>
